<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:layout_gravity="bottom"
    tools:context="compsci290.edu.duke.kvc.GameScreen">

    <TextView
        android:id="@+id/TentNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tent Number: "
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:layout_below="@id/TentNumberText"
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"/>
    <TextView
        android:id="@+id/score"
        android:layout_alignLeft="@id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tentNumber"
        android:layout_below="@+id/tentNumber"
        android:layout_marginTop="11dp"
        />
    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"/>

</RelativeLayout>
