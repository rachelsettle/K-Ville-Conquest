<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SettingsActivity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="compsci290.edu.duke.kvc.SettingsActivity"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="76.5dp"
        android:layout_height="47.8dp"
        android:background="@drawable/kvc_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
    <TextView
        android:text="Volume"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/VolumeTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />
    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/seekBarVolume"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/VolumeTextView"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="15dp"
        android:id="@+id/diffDescription"
        android:layout_below="@+id/DifficultySeekBar"
        android:layout_alignParentStart="true" />
    <Button
        android:background="@drawable/moreinfo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/InfoButton"
        android:layout_marginTop="34dp"
        android:clickable="true"
        android:autoLink="web"
        android:onClick="siteLink"
        android:layout_below="@+id/diffDescription"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Difficulty"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DifficultyTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/seekBarVolume"
        android:layout_alignStart="@+id/VolumeTextView" />
    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2"
        android:id="@+id/DifficultySeekBar"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/DifficultyTextView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
